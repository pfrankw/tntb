extends layout.pug


block content
    form(action="/search" method="GET")
            div(style="padding-top: 10%")
            div.row
                div.col-md-4.col-md-offset-4.col-center
                    img(src="/tntvillage_logo.png")

                div.col-md-6.col-md-offset-3
                    input(type="text" name="q").form-control.input-lg.col-md-4

            div.row(style="padding-top: 10px")
                div.col-md-2.col-md-offset-4
                    input(type="submit" value="Cerca su TNTVillage").btn.btn-default
                div.col-md-2
                    input(type="submit" value="Mi sento scimunito").btn.btn-default
